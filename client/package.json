{
  "private": true,
  "name": "client",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "start": "per-env",
    "start:production": "npm run -s serve",
    "start:development": "npm run -s dev",
    "build": "preact build --no-prerender --template src/template.html",
    "serve": "preact build --no-prerender --template src/template.html && preact serve",
    "dev": "preact watch --template src/template.html",
    "lint": "eslint src --fix",
    "test": "eslint src && npm run build",
    "generate-icons": "node generateIcons.js"
  },
  "browserslist": [
    "defaults"
  ],
  "eslintConfig": {
    "extends": "eslint-config-synacor"
  },
  "eslintIgnore": [
    "build/*"
  ],
  "devDependencies": {
    "babel-eslint": "^10.0.2",
    "eslint": "^6.0.1",
    "eslint-config-standard": "^13.0.0",
    "eslint-config-synacor": "^2.0.2",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.8.0",
    "per-env": "^1.0.2",
    "preact-cli": "^3.4.3",
    "preact-render-spy": "^1.2.1",
    "redux-logger": "^3.0.6"
  },
  "dependencies": {
    "brace": "^0.11.1",
    "d3": "^5.7.0",
    "fomantic-ui": "^2.7.6",
    "fomantic-ui-css": "^2.7.6",
    "jquery": "^3.4.1",
    "preact": "^8.4.2",
    "preact-compat": "^3.19.0",
    "preact-redux": "^2.1.0",
    "preact-render-to-string": "^5.0.5",
    "preact-router": "^2.5.7",
    "redux": "^4.0.4",
    "redux-saga": "^1.0.5",
    "unfetch": "^4.1.0"
  },
  "jest": {
    "verbose": true,
    "setupFiles": [
      "<rootDir>/tests/__mocks__/browserMocks.js"
    ],
    "testRegex": "(/(__tests__|tests)/.*|(\\.|/)(test|spec))\\.jsx?$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "<rootDir>/tests/__mocks__/*"
    ],
    "testURL": "http://localhost:8080",
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/tests/__mocks__/fileMock.js",
      "\\.(css|less|scss)$": "identity-obj-proxy",
      "^./style$": "identity-obj-proxy",
      "^preact$": "<rootDir>/node_modules/preact/dist/preact.min.js",
      "^react$": "preact-compat",
      "^react-dom$": "preact-compat",
      "^create-react-class$": "preact-compat/lib/create-react-class",
      "^react-addons-css-transition-group$": "preact-css-transition-group"
    }
  }
}
